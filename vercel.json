{
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "^/(piemonte|lombardia|puglia|umbria)(?:/)?$",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(facebookexternalhit|facebot|twitterbot|linkedinbot|whatsapp|slackbot|telegrambot|pinterest|discordbot).*"
        }
      ],
      "dest": "/api/og?path=/$1"
    },
    {
      "src": "^/$",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*(facebookexternalhit|facebot|twitterbot|linkedinbot|whatsapp|slackbot|telegrambot|pinterest|discordbot).*"
        }
      ],
      "dest": "/api/og?path=/"
    },
    {
      "src": "/((?!newsletters/|data/|images/|assets/|.*\\.).*)",
      "dest": "/index.html"
    }
  ]
}
